<body>
    @model User_Registration_MVC.Models.Sleep

    @{
        ViewBag.Title = "Edit";
    }

    <h2>Details</h2>
    <h3>Feel free to edit</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SleepId)

            <div class="form-group">
                @Html.LabelFor(model => model.StartSleep, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartSleep, new { htmlAttributes = new { @class = "form-control input-group date datetimepicker1" } })
                    @Html.ValidationMessageFor(model => model.StartSleep, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EndSleep, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EndSleep, new { htmlAttributes = new { @class = "form-control  datetimepicker1" } })
                    @Html.ValidationMessageFor(model => model.EndSleep, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EveningRating, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EveningRating, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EveningRating, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MorningRating, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MorningRating, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MorningRating, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.QuickSleep, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.QuickSleep)
                        @Html.ValidationMessageFor(model => model.QuickSleep, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" /> 
                    @Html.ActionLink("Delete", "Delete", "Sleeps", new { id = Model.SleepId }, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }

    <div>
      
    </div>
    
    <div class="form-actions no-color">
        <h4>
            @Html.ActionLink("Back to your logs", "Index", "Home")
            </h4>
    </div>

    @section scripts {
        <script>
            $(".datetimepicker1").datetimepicker({
                locale: 'pl'
            });
        </script>
        @*@Scripts.Render("~/bundles/jqueryval")*@
    }


</body>