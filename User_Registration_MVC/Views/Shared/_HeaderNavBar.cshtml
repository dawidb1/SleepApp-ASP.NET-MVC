
@model User_Registration_MVC.Models.User
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">WebSiteName</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#">Page 1</a></li>
                    <li><a href="#">Page 2</a></li>
                    <li><a href="#">Page 3</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li id="sign-up-button"><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li id="login-button"><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div id="login-form" class="login-form">
            <div>
                <form>
                    <h4>Username</h4>
                    @*<input class="username" />*@
                    @Html.TextBoxFor(u => u.Username)
                    <h4>Password</h4>
                    @*<input type="password" class="username" />*@
                    @Html.PasswordFor(u => u.Password)
                    <input class="sign-in-button" type="submit" value="Sign In"/>
                    <h4>New here? @Html.ActionLink("Sign up", "Rejestration", "Login")</h4>
                </form>
            </div>
        </div>
    }
    @using (Html.BeginForm("Rejestration", "Login", FormMethod.Post))
    {
        
        <div id="sign-up-form" class="login-form">
            <div>
                <form>
                    <h4>Username</h4>
                    @Html.TextBoxFor(u => u.Username)

                    <h4>Password</h4>
                    @Html.PasswordFor(u => u.Password)

                    <h4>Confirm Password</h4>
                    @Html.PasswordFor(u => u.Password)

                    <h4>Email</h4>
                    @Html.TextBoxFor(u => u.Email)


                    <input class="sign-in-button" type="submit" value="Sign In" />
                    <h4>Already have an account? @Html.ActionLink("Sign in", "Login", "Login")</h4>
                </form>
            </div>
        </div>
    }
}

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/navbarStyle.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
    
@if (@ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            $('#login-form').show();
            alert("@ViewBag.Message");
        });
    </script>
}
    <script type="text/javascript" language="javascript">
        $(document).ready(() => {

            $('#login-button').on('click',
                () => {
                    $('#login-form').toggle();
                });
            $('#sign-up-button').on('click',
                () => {
                    $('#sign-up-form').toggle();
                });
        });

    </script>
</body>
